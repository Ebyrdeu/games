<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane stylesheets="@../css/style.css"
      fx:id="menu"
      prefHeight="600.0"
      prefWidth="600.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.games.controller.LayoutController"
>

   <HBox id="menu" nodeOrientation="RIGHT_TO_LEFT" prefHeight="35.0" prefWidth="600.0">
       <Button fx:id="close" mnemonicParsing="false" onAction="#onApplicationClose" prefHeight="35.0" prefWidth="35.0" text="✕" />
       <Button fx:id="minimize" mnemonicParsing="false" onAction="#onApplicationMinimize" prefHeight="35.0" prefWidth="35.0" text="―" />
   </HBox>

</Pane>
